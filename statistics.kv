<Statistics>:
    FloatLayout:

        BoxLayout:
            id: plot_location
            pos_hint: {"center_x": .5, "center_y": 0.6}
            size_hint: (1,0.8)

        FloatLayout:
            MDRaisedButton:
                text: "day"
                font_size: 30
                pos_hint: {"center_x": .15, "center_y": .1}
                size: (200,50)
                on_release:
                    root.day()

            MDRaisedButton:
                text: "week"
                font_size: 30
                pos_hint: {"center_x": .5, "center_y": .1}
                size: (200,50)
                on_release:
                    root.week()

            MDRaisedButton:
                text: "month"
                font_size: 30
                pos_hint: {"center_x": .85, "center_y": .1}
                size: (200,50)
                on_release:
                    root.month()
